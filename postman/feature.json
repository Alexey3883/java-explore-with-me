{
  "info": {
    "name": "Comments API – fully automated with event creation",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "Create published event (admin)",
      "request": {
        "method": "POST",
        "header": [{ "key": "Content-Type", "value": "application/json" }],
        "url": "http://localhost:8080/admin/events",
        "body": {
          "mode": "raw",
          "raw": "{ \"title\": \"Тестовое событие\", \"state\": \"PUBLISHED\", \"description\": \"Тест\" }"
        }
      },
      "event": [
        {
          "listen": "test",
          "script": {
            "exec": [
              "pm.test('Event created 201', () => pm.response.to.have.status(201));",
              "if (pm.response.code === 201) {",
              "  const json = pm.response.json();",
              "  pm.collectionVariables.set('eventId', json.id);",
              "  console.log('Created event ID:', json.id);",
              "}"
            ]
          }
        }
      ]
    },
    {
      "name": "Create comment (private) – OK",
      "request": {
        "method": "POST",
        "header": [{ "key": "Content-Type", "value": "application/json" }],
        "url": "http://localhost:8080/comments/event/{{eventId}}/user/1",
        "body": {
          "mode": "raw",
          "raw": "{ \"text\": \"Тестовый комментарий\" }"
        }
      },
      "event": [
        {
          "listen": "test",
          "script": {
            "exec": [
              "pm.test('201 Created', () => pm.response.to.have.status(201));",
              "if (pm.response.code === 201) {",
              "  const json = pm.response.json();",
              "  pm.collectionVariables.set('commentId', json.id);",
              "  console.log('Created comment ID:', json.id);",
              "}"
            ]
          }
        }
      ]
    },
    {
      "name": "Create comment – validation error",
      "request": {
        "method": "POST",
        "header": [{ "key": "Content-Type", "value": "application/json" }],
        "url": "http://localhost:8080/comments/event/{{eventId}}/user/1",
        "body": {
          "mode": "raw",
          "raw": "{ \"text\": \"\" }"
        }
      },
      "event": [
        {
          "listen": "test",
          "script": [
            "pm.test('400 Bad Request', () => pm.response.to.have.status(400));"
          ]
        }
      ]
    },
    {
      "name": "Get comment by id – OK",
      "request": {
        "method": "GET",
        "url": "http://localhost:8080/comments/{{commentId}}"
      },
      "event": [
        {
          "listen": "test",
          "script": [
            "pm.test('200 OK', () => pm.response.to.have.status(200));",
            "if (pm.response.code === 200) {",
            "  const json = pm.response.json();",
            "  pm.expect(json.id).to.eql(Number(pm.collectionVariables.get('commentId')));",
            "}"
          ]
        }
      ]
    },
    {
      "name": "Update comment – forbidden",
      "request": {
        "method": "PATCH",
        "header": [{ "key": "Content-Type", "value": "application/json" }],
        "url": "http://localhost:8080/comments/comment/{{commentId}}/user/2",
        "body": {
          "mode": "raw",
          "raw": "{ \"text\": \"Чужое обновление\" }"
        }
      },
      "event": [
        {
          "listen": "test",
          "script": [
            "pm.test('403 Forbidden', () => pm.response.to.have.status(403));"
          ]
        }
      ]
    },
    {
      "name": "Update comment – OK",
      "request": {
        "method": "PATCH",
        "header": [{ "key": "Content-Type", "value": "application/json" }],
        "url": "http://localhost:8080/comments/comment/{{commentId}}/user/1",
        "body": {
          "mode": "raw",
          "raw": "{ \"text\": \"Обновлённый комментарий\" }"
        }
      },
      "event": [
        {
          "listen": "test",
          "script": [
            "pm.test('200 OK', () => pm.response.to.have.status(200));",
            "if (pm.response.code === 200) {",
            "  const json = pm.response.json();",
            "  pm.expect(json.text).to.eql('Обновлённый комментарий');",
            "}"
          ]
        }
      ]
    },
    {
      "name": "Get comments by event – OK",
      "request": {
        "method": "GET",
        "url": "http://localhost:8080/comments/event/{{eventId}}"
      },
      "event": [
        {
          "listen": "test",
          "script": [
            "pm.test('200 OK', () => pm.response.to.have.status(200));",
            "if (pm.response.code === 200) {",
            "  const json = pm.response.json();",
            "  pm.expect(json).to.be.an('array');",
            "}"
          ]
        }
      ]
    },
    {
      "name": "Delete comment (admin) – OK",
      "request": {
        "method": "DELETE",
        "url": "http://localhost:8080/admin/comments/{{commentId}}"
      },
      "event": [
        {
          "listen": "test",
          "script": [
            "pm.test('204 No Content', () => pm.response.to.have.status(204));"
          ]
        }
      ]
    },
    {
      "name": "Delete comment – NOT FOUND",
      "request": {
        "method": "DELETE",
        "url": "http://localhost:8080/admin/comments/{{commentId}}"
      },
      "event": [
        {
          "listen": "test",
          "script": [
            "pm.test('404 Not Found', () => pm.response.to.have.status(404));"
          ]
        }
      ]
    }
  ]
}
